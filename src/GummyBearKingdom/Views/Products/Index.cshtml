@model IEnumerable<GummyBearKingdom.Models.Product>
@{ 
    ViewData["Title"] = "All Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="candy-container">
    @if(Model.Count() == 0)
    {
        <h3>There are no products listed.</h3>
    }
    @foreach(var product in Model)
    {
        <a href="/Products/Details/@Html.DisplayFor(model => product.ProductId)">
            <div class="candy-card">
                <img class="candy-img" src="@Html.DisplayFor(model => product.Image)" />
                <p>
                    @Html.DisplayFor(model => product.Name)
                </p>
            </div>
        </a>
    }
</div>

